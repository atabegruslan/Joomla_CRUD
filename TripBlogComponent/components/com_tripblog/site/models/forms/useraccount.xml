<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="login">
        <field
                name="username"
                type="text"
                label="COM_TRIPBLOG_USERNAME_LBL"
                description="COM_TRIPBLOG_USERNAME_DESC"
                required="true"
        />
        <field
                name="password"
                type="text"
                label="COM_TRIPBLOG_PASSWORD_LBL"
                description="COM_TRIPBLOG_PASSWORD_DESC"
                required="true"
        />
    </fieldset>
    <fieldset name="register">
        <field
                name="name"
                type="text"
                label="COM_TRIPBLOG_NAME_LBL"
                description="COM_TRIPBLOG_NAME_DESC"
                required="true"
        />
        <field
                name="username"
                type="text"
                label="COM_TRIPBLOG_USERNAME_LBL"
                description="COM_TRIPBLOG_USERNAME_DESC"
                class="validate-username"
                validate="login"
                message="COM_TRIPBLOG_USER_SAVE_FAIL_DUPLICATE_USERNAME"
                required="true"
        />
        <field
                name="email"
                type="text"
                label="COM_TRIPBLOG_EMAIL_LBL"
                description="COM_TRIPBLOG_EMAIL_DESC"
                class="validate-email"
                validate="email"
                message="COM_TRIPBLOG_USER_SAVE_FAIL_WRONG_EMAIL_FORMAT"
                required="true"
        />
        <field
                name="password"
                type="password"
                label="COM_TRIPBLOG_PASSWORD_LBL"
                description="COM_TRIPBLOG_PASSWORD_DESC"
                class="validate-password"
                required="true"
        />
        <field
                name="password2"
                type="password"
                label="COM_TRIPBLOG_PASSWORD_LBL"
                description="COM_TRIPBLOG_PASSWORD_DESC"
                class="validate-passverify"
                validate="confirmpassword"
                message="COM_TRIPBLOG_USER_SAVE_FAIL_PASSWORD_MISMATCH"
                required="true"
        />
        <field
                name="image"
                type="file"
                label="COM_TRIPBLOG_IMAGE_LBL"
                description="COM_TRIPBLOG_IMAGE_DESC"
                preview="tooltip"
                onchange="tripblog.image.preUpload(this);"
                accept="image/jpeg,image/png"
        />
    </fieldset>
    <fields name="change_password">
        <fieldset name="change_password">
            <field
                    name="email"
                    type="text"
                    label="COM_TRIPBLOG_EMAIL_LBL"
                    description="COM_TRIPBLOG_EMAIL_DESC"
                    class="validate-email"
                    validate="email"
                    message="COM_TRIPBLOG_USER_SAVE_FAIL_WRONG_EMAIL_FORMAT"
                    required="true"
            />
        </fieldset>
    </fields>
    <fields name="set_password">
        <fieldset name="set_password">
            <field
                    name="username"
                    type="text"
                    label="COM_TRIPBLOG_USERNAME_LBL"
                    description="COM_TRIPBLOG_USERNAME_DESC"
                    class="validate-username"
                    required="true"
            />
            <field
                    name="password"
                    type="password"
                    label="COM_TRIPBLOG_PASSWORD_LBL"
                    description="COM_TRIPBLOG_PASSWORD_DESC"
                    class="validate-password"
                    required="true"
            />
            <field
                    name="password2"
                    type="password"
                    label="COM_TRIPBLOG_PASSWORD_LBL"
                    description="COM_TRIPBLOG_PASSWORD_DESC"
                    class="validate-passverify"
                    validate="confirmpassword"
                    message="COM_TRIPBLOG_USER_SAVE_FAIL_PASSWORD_MISMATCH"
                    required="true"
            />
        </fieldset>
    </fields>
</form>
