<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
				name="id"
				type="hidden"
		/>
		<field
				name="place"
				type="text"
				label="COM_TRIPBLOG_PLACE_LBL"
				description="COM_TRIPBLOG_PLACE_DESC"
				required="true"
		/>
		<field
				name="country"
				type="country"
				label="COM_TRIPBLOG_COUNTRY_LBL"
				description="COM_TRIPBLOG_COUNTRY_DESC"
				class="selectpicker"
				required="true"
		/>
		<field
				name="image"
				type="file"
				label="COM_TRIPBLOG_IMAGE_LBL"
				description="COM_TRIPBLOG_IMAGE_DESC"
				preview="tooltip"
				onchange="tripblog.image.preUpload(this);"
				accept="image/jpeg,image/png"
		/>
		<field
				name="created"
				type="text"
				label="COM_TRIPBLOG_CREATED_LBL"
				description="COM_TRIPBLOG_CREATED_DESC"
				readonly="true"
		/>
		<field
				name="review"
				type="editor"
				label="COM_TRIPBLOG_REVIEW_LBL"
				description="COM_TRIPBLOG_REVIEW_DESC"
				default=""
				filter="safehtml"
				required="true"
		/>
		<field
				name="likes"
				type="likes"
				label="COM_TRIPBLOG_LIKES_LBL"
				description="COM_TRIPBLOG_LIKES_DESC"
				max="5"
		/>
	</fieldset>
</form>
