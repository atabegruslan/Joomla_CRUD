<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
                name="id"
                type="hidden"
        />
        <field
                name="joomla_id"
                type="hidden"
        />
        <field
                name="name"
                type="text"
                label="COM_TRIPBLOG_NAME_LBL"
                description="COM_TRIPBLOG_NAME_DESC"
                required="true"
        />
        <field
                name="username"
                type="text"
                label="COM_TRIPBLOG_USERNAME_LBL"
                description="COM_TRIPBLOG_USERNAME_DESC"
                class="validate-username"
                validate="login"
                message="COM_TRIPBLOG_USER_SAVE_FAIL_DUPLICATE_USERNAME"
                required="true"
        />
        <field
                name="email"
                type="text"
                label="COM_TRIPBLOG_EMAIL_LBL"
                description="COM_TRIPBLOG_EMAIL_DESC"
                class="validate-email"
                validate="email"
                message="COM_TRIPBLOG_USER_SAVE_FAIL_WRONG_EMAIL_FORMAT"
                required="true"
        />
        <field
                name="password"
                type="password"
                label="COM_TRIPBLOG_PASSWORD_LBL"
                description="COM_TRIPBLOG_PASSWORD_DESC"
                class="validate-password"
                required="true"
        />
        <field
                name="password2"
                type="password"
                label="COM_TRIPBLOG_PASSWORD_LBL"
                description="COM_TRIPBLOG_PASSWORD_DESC"
                class="validate-passverify"
                validate="confirmpassword"
                message="COM_TRIPBLOG_USER_SAVE_FAIL_PASSWORD_MISMATCH"
                required="true"
        />
        <field
                name="usergroup"
                type="usergrouplist"
                label="COM_TRIPBLOG_USERGROUP_LBL"
                description="COM_TRIPBLOG_USERGROUP_DESC"
                multiple="true"
                required="true"
        />
        <field
                name="image"
                type="file"
                label="COM_TRIPBLOG_IMAGE_LBL"
                description="COM_TRIPBLOG_IMAGE_DESC"
                preview="tooltip"
                onchange="tripblog.image.preUpload(this);"
                accept="image/jpeg,image/png"
        />
    </fieldset>
</form>
